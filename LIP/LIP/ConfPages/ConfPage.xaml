<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local1="clr-namespace:LIP.CustomRenders"
             x:Class="LIP.ConfPages.ConfPage">
    <ContentPage.Content>
        <StackLayout Margin="20" VerticalOptions="Center">

                <StackLayout BackgroundColor="#537596" Padding="5" Margin="0,5,0,0"  Orientation="Horizontal">
                    <Image WidthRequest="30" Source="outline_assignment_24.xml"></Image>
                    <Label Text=" Configuraciones del Servidor " TextColor="White"></Label>
                </StackLayout>
            
                <StackLayout Padding="10,2,10,2" HorizontalOptions="FillAndExpand" Orientation="Horizontal"  BackgroundColor="#EBEBEB">
                    <Image x:Name="imgPicker" WidthRequest="30" Source="sharp_https_24.xml"></Image>
                    <local1:MyEntry   x:Name="txtDireccion"
                                HorizontalOptions="FillAndExpand"
                                HorizontalTextAlignment="Center" Placeholder="Direccion IP" 
                                BackgroundColor="#EBEBEB" 
                        
                                TextColor="Gray"></local1:MyEntry>
                <Button  StyleClass="Success" Text="Guardar" Clicked="Button_Clicked"></Button>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>